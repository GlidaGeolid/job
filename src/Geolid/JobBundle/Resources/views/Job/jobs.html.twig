    <div class="separator">
    </div>

    <div class="row text-center">
        <div class="small-12 columns">
            <a href="{{ path('job_offers') }}">Voir toutes nos offres</a>
        </div>
    </div>

    <div class="separator">
    </div>
    <div class="separator">
    </div>

</section><!-- jobs -->

<div class="notch">
    <div class="trapeze-left-primary"></div>
    <div class="trapeze-right-primary"></div>
</div>

<section id="jobs-backstage" class="section-primary notch-padding">
    <div class="row">
        <div class="small-12 columns text-center">
            <h2>La vie en coulisses</h2>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns text-center">
            <ul id="backstage-diaporama" class="small-block-grid-1 medium-block-grid-3 large-block-grid-4">
                {% for i in 1..8 %}
                    <li>
                        <div>
                            <img src="{{ asset('bundles/geolidjob/img/backstage/galerie-'~i~'.jpg')}}">
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="separator">
    </div>
    <div class="separator">
    </div>
</section><!-- jobs-backstage -->

{% endblock content %}
