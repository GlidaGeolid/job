<div class="news-block">
{% for post in news %}
<div class="news-post">
    <div class="news-image">
        <img src="{{ asset('bundles/geolidjob/img/common/news-footer.png')}}">
    </div>
    <div class="news-overview">
        <a href="{{ news_base_url ~ post.slug ~ news_end_url }}">
            {{ post.title }}
        </a>
        {{ post.date| localizeddate('long', 'none', app.request.locale) }}
    </div>
</div>
{% endfor %}
</div>
